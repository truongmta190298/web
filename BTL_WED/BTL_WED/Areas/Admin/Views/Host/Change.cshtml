@using BTL_WED.Models.Emty
@model Host
@{
    ViewBag.Title = "Change";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <form action="/Admin/Host/AddHost" method="post">
        <div class="form-group" style="margin-left:30%">
            <div style="margin:auto">
                <label>Username: @Model.HostName</label>
                <input type="text" class="form-control form-control-user" style="width:30%" name="HostName" />
                <img src="~/Content/img/@Model.Avatar" style="margin-top:4px;margin-bottom:4px"/>
                <input type="file" value="Open image" name="Avatar" />
                <br>
                <label>Email: @Model.Email</label>
                <input type="text" class="form-control form-control-user" style="width:30%" name="Email" />
                <label>PhoneNumber: @Model.PhoneNumber</label>
                <input type="text" class="form-control form-control-user" style="width:30%" name="PhoneNumber" />
                <label>Address: @Model.Address</label>
                <input type="text" class="form-control form-control-user" style="width:30%" name="Address" />
                <input type="submit" value="Change Host" style="margin-top:6px" name=""/>
            </div> 
            
        </div>
    </form>
</div>


