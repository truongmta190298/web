@using BTL_WED.Models;

@{
    ViewBag.Title = "Home Page";
}
@using BTL_WED.Models.Emty;
@using BTL_WED.Models.Function
@{
    Host Host = new Host();
}
@model List<House>
<div>
    <body>
        <div class="click-closed"></div>

        <div class="intro intro-carousel">
            <div id="carousel" class="owl-carousel owl-theme">
                @foreach (House it in Model)
                {
                   <div class="carousel-item-a intro-item bg-image" style="background-image: url(../Content/img/@it.Avatar)">
                        <div class="overlay overlay-a"></div>
                        <div class="intro-content display-table">
                            <div class="table-cell">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <div class="intro-body">
                                                <p class="intro-title-top">
                                                    @it.Location
                                                    
                                                </p>
                                                <h1 class="intro-title mb-4">
                                                    <span class="color-b">@it.PropertyType </span>
                                                    
                                                </h1>
                                                <p class="intro-subtitle intro-price">
                                                    <a href="#"><span class="price-a">rent | @it.Price</span></a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!--/ Carousel end /-->
        <!--/ Property Star /-->
        <section class="section-property section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">Latest Properties</h2>
                            </div>
                            <div class="title-link">
                                <a href="Propertygrid">
                                    All Property
                                    <span class="ion-ios-arrow-forward"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="property-carousel" class="owl-carousel owl-theme">
                    @foreach (House it in Model)
                    {
                    <div class="carousel-item-b">
                        <div class="card-box-a card-shadow">
                            <div class="img-box-a">
                                <img src="~/Content/img/@it.Avatar" alt="" class="img-a img-fluid">
                            </div>
                            <div class="card-overlay">
                                <div class="card-overlay-a-content">
                                    <div class="card-header-a">
                                        <h2 class="card-title-a">
                                            <a href="property-single">
                                                @it.Location
                                            </a>
                                        </h2>
                                    </div>
                                    <div class="card-body-a">
                                        <div class="price-box d-flex">
                                            <span class="price-a">rent | $ @it.Price</span>
                                        </div>
                                        <a href="Propertysingle/@it.HouseID" class="link-a">
                                            Click here to view
                                            <span class="ion-ios-arrow-forward"></span>
                                        </a>
                                    </div>
                                    <div class="card-footer-a">
                                        <ul class="card-info d-flex justify-content-around">
                                            <li>
                                                <h4 class="card-info-title">Area</h4>
                                                <span>
                                                    @it.Area
                                                    <sup>2</sup>
                                                </span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Baths</h4>
                                                <span>@it.Baths</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Beds</h4>
                                                <span>@it.Beds</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Dining</h4>
                                                <span>@it.Garage</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </section>
        <!--/ Property End /-->
        <!--/ Agents Star /-->
